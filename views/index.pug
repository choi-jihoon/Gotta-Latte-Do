extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  div.mainPage
    nav.navbar
      .navbar-container
        a.nav-logo(href="/")
          //- img.nav-logo-first(src='../images/favicon.png')
          img.nav-logo-img(src='../images/gottalattedologo_coffee.png')
        ul.navlist
          li.sublist Tour
          li.sublist What's New
          li.sublist Upgrade
          li.sublist Help
          li.mainlist
            a.btn-login(href='/users/login') Log in
          li.mainlist
            a.btn(href='/users/signup') Sign up for free
    div.main-header
        h1 A to-do app made espresso-ly for you.
        a.signup-btn(href='/users/signup') Sign Up Free
    main.main
      div.slides-container
        div.first-slide.currSlide
          img.first-image(src='../images/1-maybe-logo.png')
          div.text-under-inner-img
            div.slide-header Gotta Latte Do? We'll keep you grounded.
            div.slide-text You'll never say 'affogato do that!' again
        div.second-slide
          img.second-image(src='../images/2-coffee-break.png')
          div.text-under-inner-img
            div.slide-header Bean busy? Make a to-brew list.
            div.slide-text Never be bitter about missing a roast again
        div.third-slide
          img.third-image(src='../images/3-coffee-network.png')
          div.text-under-inner-img
            div.slide-header Tired of notepads? You'll love our brew-tiful design.
            div.slide-text We're meant to bean together!
      div.arrow-butts
        button.left-button &#8610;
        button.right-button &#8611;
      div.circle-butts
        button.circle.currSlide
        button.circle
        button.circle
    div.footer
      small.names
        ul.creators
          li.creator
            .aboutme Fiona
            a.aboutmelink(href='https://github.com/choi-jihoon' target="_blank") Github
            a.aboutmelink(href='https://www.linkedin.com/in/jihoon-choi-a6967a221/' target="_blank") LinkedIn
          li.creator
            .aboutme Savanah
            a.aboutmelink(href='https://github.com/strewm' target="_blank") Github
            a.aboutmelink(href='https://www.linkedin.com/in/savanah-trewman/' target="_blank") LinkedIn
