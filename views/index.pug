extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  div.mainPage
    nav.navbar
      a.nav-logo
        img.nav-logo-img(src='../images/logo-text.png')
      ul.navlist
        li Tour
        li What's New
        li Upgrade
        li Help
        li
          a.btn-login(href='/users/login') Log in
        li
          a.btn(href='/users/signup') Sign up for free
    main.main
      div.hero-image
        img.inner-image(src='../images/maybe-logo.png')
        div.text-under-inner-img
          p.hero-header Get to-dos out of your head.
          p.hero-p Stop thinking about your to-dos, and let us remember for you.
      header.main-header
          h1 The smart to-do app for busy people.
          a.hero-btn(href='/users/signup') Sign Up Free
    div.footer
      small.copyright Â© 2021 Gotta Latte Do
