extends layout

append head
    link(rel="stylesheet" href="/stylesheets/app.css")
    //- script(src="/javascripts/index.js" type="module" defer)

block content
    .page
        nav.navbar
            input.navbar#searchBar(type="text", placeholder="Search here")
            div.navbar#notifications Notifications
            div.navbar#settings Settings
            button.navbar#logout(type='submit') Logout
        div.sidebar
            ul Inbox
                //- li All Tasks
                //- li Today
                //- li Tomorrow
                //- li This Week
                //- li Given to Others
            ul Lists
            ul
              div.contact-sidebar
                div Contacts
                div
                  a.add-contacts(href='/add-contacts') +
              div.contact-list-sidebar
                li.contact-list(id=`${me}`)=myName.username + " (me)"
                each contact in contactsAll
                  li.contact-list(id=`${contact.id}`)=contact.username
        div.tabbedContainer
            div.tabbedGroup
                a.tabbedLink#incomplete Incomplete
                a.tabbedLink#complete Complete
        include includes/add-task
        div.my-tasks
          h1 My tasks
        .task-list
        .fiona
        .tanner
        .tanner
    script(type="module" src="javascripts/app.js")
