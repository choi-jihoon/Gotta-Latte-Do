extends layout

include utils

append head
  script(src="/javascripts/demo.js" type="module" defer)

block content
  +validationErrorSummary(errors)
  form(action='/users/login' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email Address', 'email', email)
    +field('Password', 'password', null, 'password')
    div
      button(type='submit') Login
      a(href='/') Cancel
  div
    button(type='submit' class='demo-user') Demo User
    p: a(href='/users/signup') Don't have an account?
